<Window x:Class="SleepOnLan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SleepOnLan" Height="121" Width="273" ResizeMode="CanMinimize" WindowState="Normal" Visibility="Visible" Icon="/SleepOnLan;component/Icon.jpg" ShowInTaskbar="False">
    <Grid>
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="65,12,0,0" Name="comboBox1" VerticalAlignment="Top" Width="120" SelectionChanged="comboBox1_SelectionChanged">
            <ComboBoxItem Content="Sleep" IsSelected="False" />
            <ComboBoxItem Content="Hibernate" />
            <ComboBoxItem Content="Reboot" />
            <ComboBoxItem Content="Shutdown" />
            <ComboBoxItem Content="Log off" />
            <ComboBoxItem Content="Lock" />
        </ComboBox>
        <CheckBox Content="Allow remote PC to choose action" Height="16" HorizontalAlignment="Left" Margin="12,54,0,0" Name="checkBox1" VerticalAlignment="Top" Width="227" Checked="checkBox1_Checked" Unchecked="checkBox1_Unchecked" />
    </Grid>
    
</Window>
